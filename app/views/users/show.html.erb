<% provide(:title,@user.name)%>

<p id="notice"><%= notice %></p>

<p>
  <%= gravatar_for @user %>
  <br>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<p>
  <strong>Content:</strong>
  <% @user.microposts.each do |post| %>
  <br />
  <%= post.id%>
  <%= post.content%>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>